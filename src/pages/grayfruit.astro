---
import Box from "../components/box.astro";
import MainLayout from "../layouts/main.astro";

const images = await Astro.glob('/src/content/gray/*').then(files => {
    return files.map(img => img.default);
});
---

<style lang="scss">
    .grid {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 0.25rem;
        img {
            // padding: 0.25rem;
            max-height: 500px;
            max-width: 100%;
            object-fit: contain;
            margin: 0 auto;
        }
    }

    .heading {
        font-size: 2rem;
        text-align: center;
        width: 100%;
    }
</style>

<MainLayout>
    <Box>
        <h3 class="heading">The Grayfruit Discord Hall of Fame</h3>
    </Box>
    <Box>
        <div class="grid">
            {images.map((image) => (
                <a target="_blank" rel="noopener noreferrer" href={image.src}><img src={image.src} /></a>
            ))}
        </div>
    </Box>
</MainLayout>
